<!ELEMENT featurelist (author|title|participants|description|assignments?|features|client)>
<!ELEMENT author (EMPTY)>
<!ATTLIST author
	name CDATA #REQUIRED
	email CDATA #REQUIRED >

<!ELEMENT title (#PCDATA)>

<!ELEMENT participants (participant+)>
<!ELEMENT participant (#PCDATA)>
<!ATTLIST participant
	function CDATA #IMPLIED >
<!ELEMENT participant (#PCDATA)>

<!ELEMENT features (feature+)>
<!ELEMENT feature (description,functions,data?,tests,features?)>
<!ATTLIST feature
	name CDATA #REQUIRED
	short CDATA #REQUIRED>
<!ELEMENT description (#PCDATA)>
<!ELEMENT functions (function+)>
<!ELEMENT function (#PCDATA)>
<!ELEMENT data (item+|description)>

<!ELEMENT tests (test+|description)>
<!ELEMENT test (#PCDATA)>

<!ELEMENT b (#PCDATA)>
<!ELEMENT list (item+)>

<!ELEMENT item (#PCDATA)>
<!ATTLIST item
	foreign CDATA #IMPLIED
	name CDATA #IMPLIED>

<!ELEMENT assignments (application_area?|target_groups?|operational_conditions?|safety?)>
<!ELEMENT application_area (#PCDATA)>
<!ELEMENT target_groups (item+)>
<!ELEMENT operational_conditions (item+)>
<!ELEMENT safety (item+)>
